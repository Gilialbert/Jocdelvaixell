<UserControl x:Class="JocVaixell.Casellacontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JocVaixell"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle x:Name="casella" Fill="White" Stroke="Black" StrokeThickness="1" MouseRightButtonDown="Casella_Click" />
        <TextBlock x:Name="texte"  HorizontalAlignment="Center" VerticalAlignment="Center"  MouseRightButtonDown="Casella_Click"  ></TextBlock>
    </Grid>
</UserControl>
